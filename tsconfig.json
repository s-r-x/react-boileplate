{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "lib": ["es2018", "dom"],
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "paths": {
      "@/*": ["./src/*"],
      "@testing": ["./src/testing/index.tsx"]
    },
    "outDir": "./dist/",
    "rootDir": ".",
    "baseUrl": "./",
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "dist"]
}
